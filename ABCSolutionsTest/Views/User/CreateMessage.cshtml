@model ABCSolutionsTest.Models.Message
@{
    Layout = "_Layout";
    ViewData["Title"] = "Создание сообщения";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMessage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.Users"></select>
            </div>

            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            @if (!String.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="alert alert-success">
                    <strong>Успешно! </strong>@ViewBag.SuccessMessage
                </div>
            }

            @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">
                    <strong>Error! </strong>@ViewBag.ErrorMessage
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
